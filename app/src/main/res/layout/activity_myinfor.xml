<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:text="@string/check_title"写在textview里面-->
    <TextView
        android:id="@+id/text_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/text_password"
        android:layout_alignRight="@+id/text_password"
        android:layout_alignTop="@+id/edit_username"
        android:text="用户名"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_password"
        android:layout_alignBottom="@+id/edit_password"
        android:layout_toLeftOf="@+id/submmitButton"
        android:layout_toStartOf="@+id/submmitButton"
        android:text="密码"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/text_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_message"
        android:layout_alignBottom="@+id/edit_message"
        android:layout_alignEnd="@+id/text_password"
        android:layout_alignRight="@+id/text_password"
        android:text="个性签名"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"></TextView>
    <TextView
        android:id="@+id/edit_username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_password"
        android:layout_alignEnd="@+id/edit_password"
        android:layout_alignRight="@+id/edit_password"
        android:layout_marginBottom="14dp"
        android:gravity="left"
        android:text="用户名"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/edit_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submmitButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="73dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:hint="个性签名" />

    <Button
        android:id="@+id/submmitButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="170dp"
        android:text="提交修改" />


    <EditText
        android:id="@+id/edit_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_message"
        android:layout_alignLeft="@+id/edit_message"
        android:layout_alignStart="@+id/edit_message"
        android:hint="密码"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/edit_response"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_password"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/text_password"
        android:layout_marginBottom="44dp"
        android:gravity="center" />

    <include
        layout="@layout/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>