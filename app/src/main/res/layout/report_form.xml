<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/form_title"></include>

    <View  android:layout_height="2px"
        android:layout_width="match_parent"
        android:background="#B1B1B1"
        />


    <Button
        android:id = "@+id/report_form_month"
        android:text = "本月消费报表"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:textSize="15sp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/button_icon"
        android:gravity="left|center_vertical"
        >
    </Button>
    <View  android:layout_height="2px"
        android:layout_width="match_parent"
        android:background="#B1B1B1"
        />
    <Button
        android:id = "@+id/report_form_year"
        android:text = "本年消费报表"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:textSize="15sp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/button_icon"
        android:gravity="left|center_vertical"
        >
    </Button>

    <View  android:layout_height="2px"
        android:layout_width="match_parent"
        android:background="#B1B1B1"
        />

    <TextView
        android:id="@+id/report_form_history1"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:text="历史报表"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/report_form_title1"
            android:layout_height="40dp"
            android:text="年份"
            android:textSize="18sp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_width="0dp">
        </TextView>

        <TextView
            android:id="@+id/report_form_title2"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:text="月份"
            android:textSize="18sp"
            android:layout_weight="1"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>

    <View  android:layout_height="2px"
        android:layout_width="match_parent"
        android:background="#B1B1B1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id = "@+id/report_form_history_year"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:entries="@array/year"
            android:spinnerMode="dialog"
            android:layout_weight="1">
        </Spinner>

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#B1B1B1"
            android:layout_gravity="center_horizontal"
            />

        <Spinner
            android:id = "@+id/report_form_history_month"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:entries="@array/month"
            android:spinnerMode="dialog"
            android:layout_weight="1">
        </Spinner>
    </LinearLayout>

    <View  android:layout_height="2px"
        android:layout_width="match_parent"
        android:background="#B1B1B1"
        />

    <Button
        android:id = "@+id/report_form_query"
        android:text = "查询"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:textSize="15sp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/button_icon"
        android:gravity="left|center_vertical"
        >
    </Button>

    <View  android:layout_height="2px"
        android:layout_width="match_parent"
        android:background="#B1B1B1"
        />

    <TextView
        android:id="@+id/report_form_history2"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="历史报表"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft = "10sp"
        android:layout_marginRight = "5sp"
        >
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/report_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</LinearLayout>